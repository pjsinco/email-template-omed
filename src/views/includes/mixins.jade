include ./variables

mixin button(color, url, text)
  // BUTTON
  table(width="100%" border="0" cellspacing="0" cellpadding="0")
    tr
      td(align="center" style="padding: 0;")
        a(class="body-text" href="#{url}" target="_blank" style="padding: 0px 10px 0px 10px; font-size: 15px; font-family: #{ffMedium}; font-weight: normal; color: #ffffff; text-decoration: none; text-transform: uppercase; letter-spacing: .5px; background-color: #{color}; border-top: 10px solid #{color}; border-bottom: 10px solid #{color}; border-left: 20px solid #{color}; border-right: 20px solid #{color}; display: inline-block;").
          &nbsp;#{text}&nbsp;

mixin kicker(text, color = blue)
  //- KICKER
  tr
    td(class="body-text" style="padding: 0px 0px 10px; font-family: #{ffMedium}; text-transform: uppercase; color: #{color}; letter-spacing: 2px; font-size: 14px; text-align: center")
      | #{text}

mixin headline(text, color = red)
  //- HEADLINE
  tr
    td(class="body-text" style="padding: 0px 0px 10px; font-family: #{ffMedium}; font-weight: normal; font-size: 32px; text-align: center; line-height: 40px; color: #{color};") #{text}
  
mixin subhead(text, color = blue)
  //- SUBHEAD
  tr
    td(class="body-text subhead-main" style="padding: 0px 40px 15px; font-size: 21px; line-height: 28px; color: #{color}; font-family: #{ffMedium}; font-weight: normal; text-align: center;") #{text}
  
mixin graf(text)
  //- GRAF
  tr
    td(class="body-text" style=grafStyle) #{text}

mixin disclaimer(text)
  //- GRAF
  tr
    td(class="body-text" style=disclaimerStyle) #{text}

  
mixin cta(text, link, color = red)
  //- CTA
  tr
    td(class="body-text" style="padding: 0px 0px 25px; font-family: Roboto, Helvetica, Arial, sans-serif; font-weight: normal; font-size: 16px; text-align: left; line-height: 20px; color: rgb(102, 102, 102);") 
      +button(color, link, text)
