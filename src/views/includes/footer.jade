                  +footerLine('American Osteopathic Association', true, textColorLighter)
                  +footerLine('142 E. Ontario St., Chicago, IL 60611', false, textColorLighter)
                  +footerLine('Phone: (888) 62-MYAOA (888-626-9262)', false, textColorLighter)
